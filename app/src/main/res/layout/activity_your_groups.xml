<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yourGroupsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".YourGroupsActivity">

    <TextView
        android:id="@+id/tvYourGroupsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groups You've Joined"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/purple_200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewYourGroups"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvYourGroupsTitle"
        android:layout_marginTop="12dp"
        android:scrollbars="vertical" />
</RelativeLayout>
